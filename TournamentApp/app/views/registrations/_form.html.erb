

<h2> Tournament Registration </h2>

<label> Player Info:</label>
<%= form_tag "/registrations" do %>

  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <br>
  <%= label_tag :gamertag %>
  <%= text_field_tag :gamertag %>
  <br>
  <%= label_tag :address %>
  <%= text_field_tag :address %>
  <br>

<br>
  <!-- Issue: need this to take multiple registrations at once, checkbox is for  -->
<div class="form_for">
    <label for="tournament.game[]">Tournaments:</label>
    <% for tournament in Event.find(:all)  %>
      <br><%= check_box_tag "game[]", tournament.game %>
      <%= tournament.game.humanize %>
    <% end %>
</div>   


<br>
<%= submit_tag "Submit!" %>

<% end %>
