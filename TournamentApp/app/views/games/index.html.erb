<h1>UFGT 10</h1>
   <h1>Tournaments!</h1>


<% @games.each do |event| %>
  <div class="row">
    <div class="col-md-3">
      <%= image_tag event.image, :class => "col-md-10" %>
    </div>
    <div class="col-md-9">
      <h2><%= event.name %></h2>

      <p class="lead"><%= 'Rules: ' + event.rules %></p>
    </div>
  </div>
<% end %>